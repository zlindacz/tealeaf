<% if logged_in? %>
  <p class='pull-right'>
    [<%= link_to 'edit this post', edit_post_path(@post) %>]  
  </p>
<% end %>

<p><%= render @post.categories %></p>

<%= render "shared/content_title", title: @post.title %>

<%= @post.description %>

<hr/>

<% if logged_in? %>
  <%= form_for [@post, @comment] do |f| %>
    <%= render "shared/errors", source: @comment %>
    <div class="control-group">
      <%= f.label :body, 'Leave a comment:' %>
      <%= f.text_area :body, rows: 5, class: 'span4' %>
    </div>    

    <%= f.submit "Submit comment", class: "btn btn-primary" %>
  <% end %>
<% end %>

<h5>Comments:</h5>

<% @post.comments.sort_by{|x| x.total_votes}.reverse.each do |comment| %>
  <%= render 'comments/comment', comment: comment %>
<% end %>
